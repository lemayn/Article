<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.leon.article"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".app"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.LoginActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activity.art.ArtDetailActivity"/>
        <activity android:name=".Activity.art.EditorActivity"/>
        <activity android:name=".Activity.art.MySqlActivity"/>
        <activity android:name=".Activity.VIPCenterActivity"/>
        <activity android:name=".Activity.RegisterActivity"/>
        <activity android:name=".Activity.MainActivity" android:launchMode="singleTask"/>

        <activity
            android:name=".Activity.BasicinformationActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"/>

        <activity
            android:name=".Activity.ModifyPasswordActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".Activity.ModifyWithoutPasswordActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".Activity.WithdrawDepositActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".Activity.ForgetPwdActivity"/>
        <activity android:name=".Activity.bank.BankSettingActivity"/>
        <activity android:name=".Activity.bank.AddCardActivity"/>
        <activity android:name=".Activity.NoticeActivity"/>
    </application>

</manifest>