<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.art.MySqlActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_back"
            >

            <ImageView
                android:id="@+id/iv_sql_back"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myarticle"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ListView
                android:id="@+id/lv_sql"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/lv_sql_empty"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/nodate"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>
</layout>