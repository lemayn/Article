<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/x5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x37"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x64"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="开户银行"
                android:textSize="@dimen/x15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x37"
                android:layout_marginLeft="@dimen/x15"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="工商银行"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x15"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#ababab"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x37"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/x64"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="户主姓名"
                android:textSize="@dimen/x15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x37"
                android:layout_marginLeft="@dimen/x15"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="阿姨"
                android:textSize="@dimen/x15"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#ababab"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x37"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x64"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="提现账户"
                android:textSize="@dimen/x15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x37"
                android:layout_marginLeft="@dimen/x15"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="132131313131313"
                android:textSize="@dimen/x15"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#ababab"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x37"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x64"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="提现金额"
                android:textSize="@dimen/x15"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x15"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/withdraw_amount"
                android:textSize="@dimen/x15"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#ababab"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x37"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x64"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="提现密码"
                android:textSize="@dimen/x15"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/x37"
                android:layout_marginLeft="@dimen/x15"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/withdraw_pwd"
                android:inputType="textPassword"
                android:textSize="@dimen/x15"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#ababab"/>

        <TextView
            android:layout_marginTop="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:text="@string/attention"
            android:textColor="@color/red"
            android:textSize="@dimen/x20"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_deposit_attentions"
            android:textSize="@dimen/x13"/>



    </LinearLayout>

</layout>
